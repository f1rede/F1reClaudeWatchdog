{
  "check_interval": 30,
  "max_simple_restarts": 3,
  "update_check_interval": 14400,
  "telegram_bot_token": "YOUR_BOT_TOKEN_HERE",
  "telegram_chat_id": "YOUR_CHAT_ID_HERE",
  "services": {
    "example_macos_service": {
      "launchd_label": "com.example.my-service",
      "port": 8080,
      "log_file": "/Users/username/.my-service/error.log"
    },
    "example_linux_service": {
      "systemd_unit": "my-service.service",
      "port": 3000,
      "log_file": "/var/log/my-service/error.log"
    },
    "example_custom_service": {
      "health_check_command": "curl -f http://localhost:8080/health",
      "restart_command": "~/scripts/restart-my-service.sh",
      "log_file": "/var/log/custom-service.log"
    }
  },
  "repositories": {
    "clawdbot": {
      "path": "/Users/username/workspace/clawdbot",
      "branch": "main",
      "post_update_commands": [
        "pnpm install",
        "pnpm build"
      ],
      "restart_services": ["com.alexanderdeutsch.clawdbot.gateway-source"]
    }
  }
}
